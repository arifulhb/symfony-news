<div class="container d-flex align-items-center justify-content-lg-center">
    <nav id="navbar" class="navbar order-last order-lg-0 w-75">
        <ul class="text-uppercase">
            {% for item in menuService.getMenu %}
                {% if item['submenu'] %}
                    <li class="dropdown">
                        <a href="{{ item['url'] }}"><span>{{ item['title'] }}</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            {% for sub in item['submenu'] %}
                                <li><a href="{{ sub['url'] }}">{{ sub['title'] }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                {% else %}
                    <li><a class="nav-link scrollto" href="{{ item['url']}}">{{ item['title'] }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
        <ul>
            <li><a class="nav-link scrollto" href="#facebook"><i class="text-warning bi bi-facebook"></i></a></li>
            <li><a class="nav-link scrollto" href="#twiter"><i class="text-warning bi bi-twitter"></i></a></li>
            <li><a class="nav-link scrollto" href="#instagram"><i class="text-warning bi bi-instagram"></i></a></li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
    </nav><!-- .navbar -->
</div>
